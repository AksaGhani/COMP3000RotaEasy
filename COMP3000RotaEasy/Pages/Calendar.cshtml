@page
@model COMP3000RotaEasy.Pages.CalendarModel;
@{
    ViewData["Title"] = "Calendar";
}

@section Styles {
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/fullcalendar@5.11.0/main.css">
}

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/fullcalendar@5.11.0/main.js"></script>
}


<!--INITIALISE FULL CALENDAR-->
<script>
    //initialise full calendar (v5.11.0)
    document.addEventListener('DOMContentLoaded', function () {
        var calendarEl = document.getElementById('calendar');
        var calendar = new FullCalendar.Calendar(calendarEl, {
            initialView: 'dayGridMonth'
        });
        calendar.render();
    });

    //

</script>

<div>
    <form method="get">
        <button class="btn" style="border-radius: 15px; background-color: #E2E8ED " asp-page="/pracEvents">Add Event</button>
        <button class="btn" style="border-radius: 15px; background-color: #E2E8ED " asp-page="/EmployeeSick/UserSickness">Add Absence</button>
    </form>
</div>
<div id="calendar">

</div>






