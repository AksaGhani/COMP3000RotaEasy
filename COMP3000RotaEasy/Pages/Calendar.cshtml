@page
@model COMP3000RotaEasy.Pages.CalendarModel
@{
    ViewData["Title"] = "Calendar";
}

@section Styles {
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/fullcalendar@5.11.0/main.css">
}

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/fullcalendar@5.11.0/main.js"></script>
}

@section PageTitle{ 
    <h1 style="text-align:center; font-size:x-large;">CALENDAR</h1>
}
<script>

    document.addEventListener('DOMContentLoaded', function () {
        var calendarEl = document.getElementById('calendar');
        var calendar = new FullCalendar.Calendar(calendarEl, {
            initialView: 'dayGridMonth'
        });
        calendar.render();
    });

</script>

<div id="calendar">

</div>

<div style="padding:10px;">
    <p>For future work there will be request options here.</p>
    <p>The requests will be drag and droppable.</p>
</div>

<div style="padding:10px; margin:5px;">
    <button class="btn" style="background-color: #E2E8ED">Holiday</button>
    <button class="btn" style="background-color: #E2E8ED">Sick</button>
    <button class="btn" style="background-color: #E2E8ED">Other Absence</button>
</div>