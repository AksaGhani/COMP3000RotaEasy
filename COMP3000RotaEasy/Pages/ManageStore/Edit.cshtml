@page
@model COMP3000RotaEasy.Pages.ManageStore.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Stores</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Stores.StoreId" />
            <div class="form-group">
                <label asp-for="Stores.StoreName" class="control-label"></label>
                <input asp-for="Stores.StoreName" class="form-control" />
                <span asp-validation-for="Stores.StoreName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Stores.StoreLocation" class="control-label"></label>
                <input asp-for="Stores.StoreLocation" class="form-control" />
                <span asp-validation-for="Stores.StoreLocation" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Stores.StoreAddress" class="control-label"></label>
                <input asp-for="Stores.StoreAddress" class="form-control" />
                <span asp-validation-for="Stores.StoreAddress" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Stores.StoreZipCode" class="control-label"></label>
                <input asp-for="Stores.StoreZipCode" class="form-control" />
                <span asp-validation-for="Stores.StoreZipCode" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
