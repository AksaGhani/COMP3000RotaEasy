<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - RotaEasy</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" type="text/css"/>

    @RenderSection("Styles", required: false)
</head>
<body style="background-color: white;">
    <header>
        <nav class="navbar navbar-dark navbar-expand-lg" style="background-color: #667F97; color: white; ">
            <a class="navbar-brand" asp-page="/Index" style="color: white; font-size:x-large;">
                <img src="~/img/Logo.png" width="75" height="75" alt="RotaEasy Logo" loading="lazy" />
                RotaEasy
            </a>
            @*TITLE*@
            <h1 style="text-align:center; font-size:xx-large;">HOME</h1>
            @*DROPDOWN MENU*@
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarDropdown" aria-controls="navbarDropdown" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon" style="color:white"></span>
            </button>
            <div id="navbarDropdown" style="text-align:right;">
                <ul class="navbar-nav">
                    <li class="nav-item active">
                        <a class="nav-link" asp-page="/Dashboard">Dashboard</a>
                    </li>
                    <li class="nav-item"><a class="nav-link" asp-page="/Index">Home</a></li>
                    <li class="nav-item"><a class="nav-link" asp-page="/Timetable">Timetable</a></li>
                    <li class="nav-item"><a class="nav-link" asp-page="/Employees">Employees</a></li>
                    <li class="nav-item"><a class="nav-link" asp-page="/Store">Store</a></li>
                    <li class="nav-item"><a class="nav-link" asp-page="/Calendar">Calendar</a></li>
                    <li class="nav-item"><a class="nav-link" asp-page="/Links">Helpful Links</a></li>
                    <li class="nav-item"><a class="nav-link" asp-page="/Settings">Settings</a></li>
                </ul>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            <div style="border-radius: 25px; background-color: #475F6D; margin:30px; margin-top: 10px; margin-bottom: 10px;" class="card">
                @RenderBody()
            </div>
        </main>
    </div>

    <footer class="border-top footer text-muted" style="background-color: white;">
        <div class="container">
            &copy; 2022 - RotaEasy - <a asp-area="" asp-page="/Privacy">Privacy</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="https://kit.fontawesome.com/a076d05399.js" crossorigin="anonymous"></script>
    @*<script>
        $(document).ready(function () {
            $('.dropdown-toggle').dropdown()
        });
    </script>*@

    @RenderSection("Scripts", required: false)
</body>
</html>
