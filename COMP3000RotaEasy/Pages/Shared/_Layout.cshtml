<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - RotaEasy</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" type="text/css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/fullcalendar@5.11.0/main.css">

    @RenderSection("Styles", required: false)

    @RenderSection("Scripts", required: false)
</head>
<body style="background-color: white;">
    <header>
        <nav class="navbar navbar-dark navbar-expand-lg" style="background-color: #667F97; color: white;text-align:center;">
            <a class="navbar-brand" asp-page="/Home" style="color: white; font-size:x-large;">
                <img src="~/img/Logo.png" width="75" height="75" alt="RotaEasy Logo" loading="lazy" />
                RotaEasy
            </a>


            @*DROPDOWN MENU*@
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarDropdown" aria-controls="navbarDropdown" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon" style="color:white"></span>
            </button>
            <div id="navbarDropdown" style="text-align:right;">
                <ul class="navbar-nav">
                    <li class="nav-item active">
                        <a class="nav-link" asp-page="/Dashboard/Dashboard">Dashboard</a>
                    </li>
                    <li class="nav-item"><a class="nav-link" asp-page="/Home">Home</a></li>
                    <li class="nav-item"><a class="nav-link" asp-page="/TimetableShifts/Index">Timetable</a></li>
                    <li class="nav-item"><a class="nav-link" asp-page="/Users/Index">Employees</a></li>
                    <li class="nav-item"><a class="nav-link" asp-page="/ManageStore/Index">Store</a></li>
                    <li class="nav-item"><a class="nav-link" asp-page="/Calendar">Calendar</a></li>
                    <li class="nav-item"><a class="nav-link" asp-page="/Links">Helpful Links</a></li>
                    <li class="nav-item"><a class="nav-link" asp-page="/Settings">Settings</a></li>
                </ul>
            </div>
        </nav>
    </header>


    <main role="main" class="container">
        @RenderBody()

        @*BACK BUTTON --> TAKES YOU TO DASHBOARD*@
        <a asp-page="/Dashboard/Dashboard">
            <img src="~/img/back icon.jpg" width="50" height="50" style="float:right; margin: 10px; padding: 10px;" />
        </a>

     </main>
 


    <footer class="border-top footer text-muted" style="background-color: white;">
        <div class="container">
            &copy; 2022 - RotaEasy - <a asp-area="" asp-page="/Privacy">Privacy</a>
        </div>
    </footer>

    <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js" integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.12.9/dist/umd/popper.min.js" integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/js/bootstrap.min.js" integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl" crossorigin="anonymous"></script>
    @*<script src="~/js/site.js" asp-append-version="true"></script>*@
    <script src="https://kit.fontawesome.com/a076d05399.js" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/fullcalendar@5.11.0/main.js"></script>
    
</body>
</html>
